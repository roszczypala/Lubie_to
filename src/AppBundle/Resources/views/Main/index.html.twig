{% extends "::base.html.twig" %}

{% block title %}Let's do it{% endblock %}
{% block jumbotron %}   
    <h1>Join Us</h1>
    <h3>Let's Do It Together</h3>
{% endblock %}

{% block left %}         
    <h4>User:<br> {{user.username}}</h4>
    {%if user.photo is not null%}
        <img src="{{user.photo.path}}" alt="Photo" width="100" height="100" class="center-block"/>
        <a class="btn btn-success" href="/photo/{{user.photo.id}}/edit">Update photo</a>
    {% else %}    
        <a class="btn btn-success" href="/photo/user/create/{{user.id}}">Add photo</a>
    {% endif %}
{% endblock %}

