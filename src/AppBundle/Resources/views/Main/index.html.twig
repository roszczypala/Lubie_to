{% block middle1 %} 
    <h3 class="text-center">My events</h3>
    <div class="list-group">
    {%for event in events%}
        <a class="list-group-item" href="/event/{{event.id}}">
            {{event.name}}
            {{event.date | date('Y-m-d H:i')}}
        </a>
    {% else %}  
        <p>No events yet</p>     
    {%endfor%}
{% endblock %} 

{% block right %} 
    <div class="btn-group-vertical">
        {% if user.username == 'Admin' %}
            <a class="btn btn-success" href="/admin/index">Admin panel</a>
        {% endif %}    
        <a class="btn btn-success" href="/crew">All crews</a>
        <a class="btn btn-success" href="/crew/new">Add crew</a>
