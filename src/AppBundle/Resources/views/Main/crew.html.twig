{% extends "::base.html.twig" %}

{% block title %}Let's do it{% endblock %}



{% block jumbotron %} 
    <h1>{{crew.name}}</h1>
    <p>{{crew.description}}</p>
{% endblock %}

{% block left %}   
    {%if crew.photo is not null%}
        <img src="{{crew.photo.path}}" width="150" height="150" alt="Image">
    {% endif %}
{% endblock %}

{% block middle %} 
    <h2 class="text-center">Our events</h2>
    <div class="list-group">
        {%for event in events%}
            <a class="list-group-item" href="/event/{{event.id}}">
                <strong>{{event.name}}</strong>
                {{event.date | date('Y-m-d H:i')}}
            </a>
        {% else %}  
            <p>No events yet</p> 
        {%endfor%}
    </div>
{% endblock %}    
{% block middle1 %}     
    <h2 class="text-center">Our members</h2>
    <div class="list-group">
    {%for user in users%}
        <strong><a class="list-group-item" href="/user/{{user.id}}">{{user.username}}</a></strong>
    {% else %}  
        <p>No members yet</p> 
    {%endfor%}
    </div>
{% endblock %}       
{% block right %} 
    <div class="btn-group-vertical">
        <a class="btn btn-success" href="/event/create/{{crew.id}}">Create new event</a>
        {#<a class="btn btn-success" href="/crew/{{crew.id}}/edit">Edit crew info</a>#}
    </div>
{% endblock %}  