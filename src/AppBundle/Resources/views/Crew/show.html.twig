{% extends '::base.html.twig' %}

{% block middle -%}
    <h1>Crew</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Accepted</th>
                <td>{{ entity.accepted }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('crew') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('crew_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>

    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
